
{{>admin-nav}}

<!-- admin body -->
<div class="admin-body">

	<div class="conatiner">

		<div class="dashboard">

			<!-- Volunteers Row -->
			<div class="row">
				<div class="col-md-2">
					<div class="module-header">
						<h5>Volunteers Needed <span class="hidden" id="vols-needed-hidden">{{vols.[0].[SUM(volsRemaining)]}}</span></h5>
					</div>
					<div class='module'>
						<canvas id="my-canvas"></canvas>
					</div> <!-- end module -->
				</div> <!-- end col-md-2 -->

				<div class="col-md-5">
					<div class="module-header">
						<h5>% of Volunteer Positions Filled (Total Volunteers Positions: <span id="total-vol-positions">{{vol_pos.[0].[SUM(volsNeeded)]}}</span>)</h5>
					</div>
					<div class='module'>
						<h3><span id="vol-filled"></span>%</h3>
						<div class="progress">
							<div class="progress-bar" id="vols-width" role="progressbar" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100" style="width: 39%">
						  		<span class="sr-only">39% Complete (danger)</span>
						  	</div>
						</div>
					</div> <!-- end module -->
				</div> <!-- end col-md-4 -->

				<div class="col-md-5">
					<div class="module-header">
						<h5>% of Tasks Completed</h5>
					</div>
					<div class='module'>
						<h3><span id="tasks-filled"></span>%</h3>
						<div class="progress">
							<div class="progress-bar" id="tasks-width" role="progressbar" aria-valuenow="77" aria-valuemin="0" aria-valuemax="100" style="width: 77%">
						  		<span class="sr-only">77% Complete (warning)</span>
						  	</div>
						</div>
					</div> <!-- end module -->
				</div> <!-- end col-md-4 -->
			</div> <!-- end row -->

			<!-- Tasks Row -->
			<div class="row">

				<div class="col-md-7">
					<!-- users row -->
					<div class="row">
						<div class="col-md-4">
							<div class="module-header">
								<h5>Committed Volunteers</h5>
							</div>
							<div class='module' id="db-cv">
								<h2 class="db-num">{{vols_volun.[0].[SUM(volsNeeded - volsRemaining)]}}</h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->

						<div class="col-md-4">
							<div class="module-header">
								<h5>Uncommitted Volunteers</h5>
							</div>
							<div class='module' id="db-uv">
								<h2 class="db-num"></h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->

						<div class="col-md-4">
							<div class="module-header">
								<h5>Total Volunteers</h5>
							</div>
							<div class='module' id="db-tv">
								<h2 class="db-num">{{membs.[0].[COUNT(*)]}}</h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->
					</div> <!-- row -->
					
					<!-- tasks row -->
					<div class="row">
						<div class="col-md-4">
							<div class="module-header">
								<h5>Completed Tasks</h5>
							</div>
							<div class='module' id="db-ct">
								<h2 class="db-num">{{completed_tasks.[0].[SUM(volsNeeded = 0)]}}</h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->

						<div class="col-md-4">
							<div class="module-header">
								<h5>Open Tasks</h5>
							</div>
							<div class='module' id="db-ot">
								<h2 class="db-num"></h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->

						<div class="col-md-4">
							<div class="module-header">
								<h5>Total Tasks</h5>
							</div>
							<div class='module' id="db-tt">
								<h2 class="db-num">{{total_tasks.[0].[COUNT(*)]}}</h2>
							</div> <!-- end module -->
						</div> <!-- end col-md-4 -->
					</div> <!-- row -->
				</div> <!-- col-md-7 -->

				<div class="col-md-5">
					<div class="module-header">
						<h5>Tasks with High Number of Open Volunteers</h5>
					</div>
					<div class='module'>

						<div class="list-group">
							{{#each db_tasks}}
						  	<a href="#" class="list-group-item">
								<span class="badge">{{this.volsRemaining}}</span>
						    	<h4 class="list-group-item-heading">{{this.taskTitle}}</h4>
						    	<p class="list-group-item-text">{{this.taskDescript}}</p>
						   </a>
						   {{/each}}
						</div>
					</div>
				</div>

				
			</div> <!-- end row -->

		</div> <!-- end dashboard -->

	</div> <!-- end container -->

{{>admin-footer}}

</div> <!-- end admin-body -->		